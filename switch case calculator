#include <stdio.h>

int main()
{
    int a=3,b=3;
    char op;
    printf("enter two operands");
    scanf("%d%d",&a,&b);
    printf("enter an operator (+,*,/");
    scanf("%c",& op);
    switch(op)
{
     case'+':
     printf("addition=%d",a+b);
     break;
     case'*':
     printf("multiplication= %d",a*b);
     break;
     case'/':
     if (b<=0)
     printf("division cannot be performed");
     else printf("division=%f",(float)a/b);
     break;
     default:
     printf("error! incorrect operator");
}
  return 0;
}
